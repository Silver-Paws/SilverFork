/// Get translated text from global dictionaries
/proc/get_modern_text(text_key, datum/preferences/prefs = null)
	if(!text_key)
		return ""

	var/result = ""
	if(prefs?.modern_ui_language == 1)
		result = ru_strings[text_key]
	else
		result = en_strings[text_key]

	return result ? result : text_key

/// Translate gender string for modern UI
/proc/translate_gender_modern(gender, datum/preferences/prefs = null)
	switch(gender)
		if(MALE)
			return prefs?.modern_ui_language == 1 ? "Мужчина" : "Male"
		if(FEMALE)
			return prefs?.modern_ui_language == 1 ? "Женщина" : "Female"
		if(PLURAL)
			return prefs?.modern_ui_language == 1 ? "Множественное" : "Plural"
	return gender

/// Translate preview type for modern UI
/proc/translate_preview_type_modern(preview_type, datum/preferences/prefs = null)
	var/is_russian = prefs?.modern_ui_language == 1
	switch(preview_type)
		if(PREVIEW_PREF_JOB)
			return is_russian ? "На работе" : "On job"
		if(PREVIEW_PREF_LOADOUT)
			return is_russian ? "С вещами" : "With items"
		if(PREVIEW_PREF_NAKED)
			return is_russian ? "Нагота" : "Naked"
		if(PREVIEW_PREF_NAKED_AROUSED)
			return is_russian ? "Нагота (возб.)" : "Naked (aroused)"
	return preview_type

/// Get language selector HTML for modern theme settings
/proc/get_modern_language_selector(datum/preferences/prefs = null)
	var/list/dat = list()
	var/lang_ru_cls = "theme-settings-pill" + (prefs?.modern_ui_language == 1 ? " linkOn" : "")
	var/lang_en_cls = "theme-settings-pill" + (prefs?.modern_ui_language == 0 ? " linkOn" : "")
	dat += "<a class='[lang_ru_cls]' href='?_src_=prefs;preference=modern_theme_settings;action=set_language;lang=ru'>Русский</a>"
	dat += "<a class='[lang_en_cls]' href='?_src_=prefs;preference=modern_theme_settings;action=set_language;lang=en'>English</a>"
	return dat.Join("")
